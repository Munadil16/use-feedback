generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id       String    @id @default(cuid())
  name     String
  email    String    @unique
  image    String
  products Product[]
}

model Product {
  id      String @id @default(cuid())
  name    String
  title   String
  message String
  userId  String
  User    User   @relation(fields: [userId], references: [id])
}
